    - pres-commitee-vps

  groups:  # ou=groups,dc=apache,dc=org
    - apsite
    - concom
    - member

  services:  # ou=groups,ou=services,dc=apache,dc=org
    - audit
    - board
    - infrastructure
    - infrastructure-root
    - pmc-chairs
    - virtualmgmt
    - asf-secretary

explicit:
